@model BabyCiao.ViewModel.andy_announcementViewModel

@{
    ViewData["Title"] = "新增公告";
}

<h1>新增</h1>

<h4>公告內容</h4>
<hr />
<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group  row">
   
        <div class="form-group  col-md-4 ">
        
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="AccountUserAccount" class="control-label">公告新增者</label>
                <input asp-for="AccountUserAccount" class="form-control" type="text" readonly="readonly" value="@ViewBag.AccountUserAccount"></input>
            </div>
            @* <div class="form-group mb-2">
                <label asp-for="PublishTime" class="control-label">新增時間</label>
                <input asp-for="PublishTime" class="form-control" type="text" readonly="readonly" value="@ViewBag.PublishTime"></input>
            </div> *@
            <div class="form-group mb-2">
                <label asp-for="Tittle" class="control-label">標題</label>
                <input asp-for="Tittle" class="form-control" />
                <span asp-validation-for="Tittle" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-2">
                <label asp-for="ReferenceName" class="control-label">來源單位</label>
                <input asp-for="ReferenceName" class="form-control" />
                <span asp-validation-for="ReferenceName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="ReferenceRoute" class="control-label">來源網址</label>
                <input asp-for="ReferenceRoute" class="form-control" />
                <span asp-validation-for="ReferenceRoute" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Type" class="control-label">公告類型</label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group mb-2 d-flex align-items-center">
                <label asp-for="Display" class="control-label me-3">顯示設定</label>
                <div class="form-check form-check-inline">
                    <input asp-for="Display" class="form-check-input" type="radio" value="true" id="radio1" />
                    <label asp-for="Display" class="form-check-label" for="radio1">顯示</label>
                    <span asp-validation-for="Display" class="text-danger"></span>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for="Display" class="form-check-input" type="radio" value="false" id="radio2" />
                    <label asp-for="Display" class="form-check-label" for="radio2">隱藏</label>
                    <span asp-validation-for="Display" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Article" class="control-label" >文章內容</label>
                <textarea asp-for="Article" class="form-control" placeholder="請輸入文章內容" rows="5"></textarea>
                <span asp-validation-for="Article" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="新增" class="btn btn-primary" />
            </div>
        </div>
        <div class="form-group col-md-3">
            <partial name="_showPicture"></partial>
            <input asp-for="Picture" type="file" accept="image/*" class="form-control my-2" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">取消新增(返回前頁)</a>
</div>


@section Scripts {
    <script>
        $(function () {
            $('#Picture').on('change', function () {
                var allowType = "image.*";
                var file = this.files[0];
                if (file.type.match(allowType)) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $("#Picture").prev().attr("src", e.target.result);
                        $("#Picture").prev().attr("title", file.name);
                    };
                    reader.readAsDataURL(file);
                    $(".btn").prop("disabled", false);
                } else {
                    alert("不支援的檔案類型");
                    $(".btn").prop("disabled", true);
                }
            })
        })
       
    </script>
}