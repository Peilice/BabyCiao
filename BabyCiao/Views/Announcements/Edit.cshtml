@model BabyCiao.Models.Announcement

@{
    ViewData["Title"] = "編輯";
}

<h1>編輯</h1>

<h4>公告</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AccountUserAccount" class="control-label"></label>
                <select asp-for="AccountUserAccount" class="form-control" asp-items="ViewBag.AccountUserAccount"></select>
                <span asp-validation-for="AccountUserAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublishTime" class="control-label"></label>
                <input asp-for="PublishTime" class="form-control" />
                <span asp-validation-for="PublishTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tittle" class="control-label"></label>
                <input asp-for="Tittle" class="form-control" />
                <span asp-validation-for="Tittle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article" class="control-label"></label>
                <input asp-for="Article" class="form-control" />
                <span asp-validation-for="Article" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReferenceName" class="control-label"></label>
                <input asp-for="ReferenceName" class="form-control" />
                <span asp-validation-for="ReferenceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReferenceRoute" class="control-label"></label>
                <input asp-for="ReferenceRoute" class="form-control" />
                <span asp-validation-for="ReferenceRoute" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Display" /> @Html.DisplayNameFor(model => model.Display)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="儲存變更" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
    <partial name="_showPicture"></partial>
    
    <hr class="my-3"></hr>
</div>

<div class="my-3">
    <a asp-action="Index" class="">取消新增(返回前頁)</a>
</div>


@section Scripts {
    <script>
        $(function () {
            $('#Picture').on('change', function () {
                var allowType = "image.*";
                var file = this.files[0];
                if (file.type.match(allowType)) {
                    var reader = new FileReader();
                    reader.onload = function (e) {

                        alert('change');
                        // $("#Picture").prev().attr("src", e.target.result);
                        // $("#Picture").prev().attr("title", file.name);


                    };
                    reader.readAsDataURL(file);
                    $(".btn").prop("disabled", false);
                } else {
                    alert("不支援的檔案類型");
                    $(".btn").prop("disabled", true);
                }
            })

            // $('#inputGroupFile01').on('change', function () {
            //     previewImage(this);
            // })


        })
    </script>
}