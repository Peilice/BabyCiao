@model BabyCiao.Models.BabyResume

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h5 mt-4">@ViewData["Title"]</h1>
            <div class="card">
                <div class="card-body p-3">
                    <h4 class="card-title">新增</h4>
                    <hr />
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group mb-2">
                            <label asp-for="AccountUserAccount" class="form-label">帳號</label>
                            <select asp-for="AccountUserAccount" class="form-control" asp-items="ViewBag.AccountUserAccount"></select>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Photo" class="form-label">照片</label>
                            <input asp-for="Photo" type="file" class="form-control" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="FirstName" class="form-label">名字</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="City" class="form-label">城市</label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="District" class="form-label">區域</label>
                            <input asp-for="District" class="form-control" />
                            <span asp-validation-for="District" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="RequireDate" class="form-label">需求日期</label>
                            <input asp-for="RequireDate" class="form-control" />
                            <span asp-validation-for="RequireDate" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Babyago" class="form-label">年齡</label>
                            <input asp-for="Babyago" class="form-control" />
                            <span asp-validation-for="Babyago" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="TypeOfDaycare" class="form-label">托育類型</label>
                            <select asp-for="TypeOfDaycare" class="form-control" asp-items="ViewBag.DaycareTypes"></select>
                            <span asp-validation-for="TypeOfDaycare" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="TimeSlot" class="form-label">時段</label>
                            <input asp-for="TimeSlot" class="form-control" />
                            <span asp-validation-for="TimeSlot" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Memo" class="form-label">備註</label>
                            <input asp-for="Memo" class="form-control" />
                            <span asp-validation-for="Memo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="儲存" class="btn btn-primary btn-sm" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary btn-sm">返回列表</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
