@model BabyCiao.Models.BabyResume
@section Styles {
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.3/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://code.jquery.com/ui/1.13.3/jquery-ui.js"></script>
    <link href="~/ruang-admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/ruang-admin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/test/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/test/lib/lightbox/css/lightbox.min.css" rel="stylesheet" />
    <link href="~/test/css/style.css" rel="stylesheet" />
    <link href="~/test/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/ruang-admin/css/ruang-admin.min.css" rel="stylesheet" />
}

<h1>保母審核</h1>
<div class="container-fuild">
    <div class="row">
        <div class="col-4" height="auto">
            <ul class="navbar-nav sidebar sidebar-light accordion" id="accordionSidebar">
                <a asp-controller="Nannyplatform" asp-action="Nannyplatformindex">
                    <div class="sidebar-brand-text mx-3 ">保母平台管理</div>
                </a>
                <hr class="sidebar-divider">
                <li class="nav-item">
                    <a asp-controller="Nannyplatform" asp-action="NannyIndex" class="nav-link collapsed" data-toggle="collapse" data-target="#collapseForm" aria-expanded="true"
                       aria-controls="collapseForm"><i class="fab fa-fw fa-wpforms"></i>保母委託單管理</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Nannyplatform" asp-action="babyIndex" class="nav-link collapsed" data-toggle="collapse" data-target="#collapseForm" aria-expanded="true"
                       aria-controls="collapseForm"><i class="fab fa-fw fa-wpforms"></i>家長託單管理</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="NannyRequirments" asp-action="Index" class="nav-link collapsed" data-toggle="collapse" data-target="#collapsePage" aria-expanded="true"
                       aria-controls="collapsePage"><i class="fas fa-fw fa-columns"></i>保母審核管理</a>
                <li class="nav-item">
                    <a asp-controller="contracts" asp-action="Index" class="nav-link collapsed" data-toggle="collapse" data-target="#collapseTable" aria-expanded="true"
                       aria-controls="collapseTable"><i class="fas fa-fw fa-table"></i>合約管理</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="comment" asp-action="Index" class="nav-link collapsed" data-toggle="collapse" data-target="#collapsePage" aria-expanded="true"
                       aria-controls="collapsePage"> <i class="fas fa-fw fa-chart-area"></i>用戶狀態管理</a>
                </li>
            </ul>
        </div>
        <div class="col-8">

                        <dt class="col-sm-2">照片</dt>
                        <dd class="col-sm-10">
                            @if (!string.IsNullOrEmpty(Model.Photo))
                    {
                    <img class="avatar avatar-lg" src="~/nannnyandperant/使用者大頭照/@Model.Photo" alt="" style="width: 200px; height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <img class="avatar avatar-lg" src="~/nannnyandperant/使用者大頭照/大頭照.png" alt="Default Image" style="width: 200px; height: 200px; object-fit: cover;">
                    }
                        </dd>

                        <dt class="col-sm-2">名字</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.FirstName)</dd>

                        <dt class="col-sm-2">城市</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.City)</dd>

                        <dt class="col-sm-2">區域</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.District)</dd>

                        <dt class="col-sm-2">申請日期</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.ApplyDate)</dd>

                        <dt class="col-sm-2">需求日期</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.RequireDate)</dd>

                        <dt class="col-sm-2">年齡</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Babyage)</dd>

                        <dt class="col-sm-2">托育類型</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.TypeOfDaycare)</dd>

                        <dt class="col-sm-2">時間段</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.TimeSlot)</dd>

                        <dt class="col-sm-2">備註</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Memo)</dd>

                        <dt class="col-sm-2">顯示</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Display)</dd>

                        <dt class="col-sm-2">帳號</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.AccountUserAccountNavigation.Account)</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="刪除" class="btn btn-danger btn-sm" /> |
                        <a asp-action="Index" class="btn btn-secondary btn-sm">返回列表</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
