@model BabyCiao.Models.BabyResume

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h5 mt-4">詳細資訊</h1>
            <div class="card">
                <div class="card-body p-3">
                    <h4 class="card-title">詳細資料</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">照片</dt>
                        <dd class="col-sm-10">
                            @if (!string.IsNullOrEmpty(Model.Photo))
                            {
                                <img src="@Model.Photo" alt="照片" class="img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;" />
                            }
                            else
                            {
                                <img src="/img/大頭照.png" alt="Default Image" class="img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;" />
                            }
                        </dd>
                        <dt class="col-sm-2">名字</dt>
                        <dd class="col-sm-10">@Model.FirstName</dd>
                        <dt class="col-sm-2">城市</dt>
                        <dd class="col-sm-10">@Model.City</dd>
                        <dt class="col-sm-2">區域</dt>
                        <dd class="col-sm-10">@Model.District</dd>
                        <dt class="col-sm-2">申請日期</dt>
                        <dd class="col-sm-10">@Model.ApplyDate.ToString("yyyy/MM/dd")</dd>
                        <dt class="col-sm-2">需求日期</dt>
                        <dd class="col-sm-10">@Model.RequireDate.ToString("yyyy/MM/dd")</dd>
                        <dt class="col-sm-2">年齡</dt>
                        <dd class="col-sm-10">@Model.Babyage</dd>
                        <dt class="col-sm-2">托育類型</dt>
                        <dd class="col-sm-10">@Model.TypeOfDaycare</dd>
                        <dt class="col-sm-2">時間段</dt>
                        <dd class="col-sm-10">@Model.TimeSlot</dd>
                        <dt class="col-sm-2">備註</dt>
                        <dd class="col-sm-10">@Model.Memo</dd>
                        <dt class="col-sm-2">顯示</dt>
                        <dd class="col-sm-10">
                            <input type="checkbox" disabled="disabled" @(Model.Display ? "checked" : "") />
                        </dd>
                        <dt class="col-sm-2">帳號</dt>
                        <dd class="col-sm-10">@Model.AccountUserAccount</dd>
                    </dl>
                </div>
            </div>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary btn-sm">返回列表</a>
            </div>
        </div>
    </div>
</div>
