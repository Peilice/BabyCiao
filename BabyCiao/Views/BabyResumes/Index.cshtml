@model IEnumerable<BabyCiao.Models.BabyResume>

<h1>家長委託單</h1>
    <section class="pt-0">
        <div class="container-fluid">
            <div class="row gy-4 msnry-grid">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-xl-4">
                        <div class="card">
                            <div class="card-body px-3 py-4">
                                <a class="stretched-link d-flex align-items-center text-reset" href="@Url.Action("Details", "BabyResumes", new { id = item.Id })">
                                @if (!string.IsNullOrEmpty(item.Photo))
                                {
                                    <img class="avatar avatar-lg" src="~/nannnyandperant/使用者大頭照/@item.Photo"  style="width: 200px; height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <img class="avatar avatar-lg" src="~/nannnyandperant/使用者大頭照/大頭照.png" alt="Default Image" style="width: 200px; height: 200px; object-fit: cover;">
                                }
                                    <div class="ms-3 overflow-hidden">
                                        <h5 class="card-text mb-0">@Html.DisplayFor(modelItem => item.FirstName)</h5>
                                        <p class="card-text text-uppercase text-muted text-sm">@Html.DisplayFor(modelItem => item.City)</p>
                                        <p class="card-text">@Html.DisplayFor(modelItem => item.District)<br><abbr title="Phone">帳號:</abbr>@Html.DisplayFor(modelItem => item.AccountUserAccountNavigation.Account)</p>
                                    </div>
                                </a>
                                <div class="mt-3">
                                    <p><strong>申請日期:</strong> @Html.DisplayFor(modelItem => item.ApplyDate)</p>
                                    <p><strong>需求日期:</strong> @Html.DisplayFor(modelItem => item.RequireDate)</p>
                                    <p><strong>寶寶年齡:</strong> @Html.DisplayFor(modelItem => item.Babyage)</p>
                                    <p><strong>托育類型:</strong> @Html.DisplayFor(modelItem => item.TypeOfDaycare)</p>
                                    <p><strong>時段:</strong> @Html.DisplayFor(modelItem => item.TimeSlot)</p>
                                    <p><strong>備註:</strong> @Html.DisplayFor(modelItem => item.Memo)</p>
                                    <p><strong>顯示:</strong> @Html.DisplayFor(modelItem => item.Display)</p>
                                </div>
                            </div>
                        </div>
                        <div class="mt-3">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">修改</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">刪除</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>
