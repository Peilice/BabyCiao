@model BabyCiao.ViewModel.ContractViewModel

<h1>合約詳細資訊</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="ContractId" class="control-label"></label>
                <input asp-for="ContractId" class="form-control" readonly />
                <span asp-validation-for="ContractId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NannyAccountUserAccount" class="control-label"></label>
                <input asp-for="NannyAccountUserAccount" class="form-control" />
                <span asp-validation-for="NannyAccountUserAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountUserAccount" class="control-label"></label>
                <input asp-for="AccountUserAccount" class="form-control" />
                <span asp-validation-for="AccountUserAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractStartTime" class="control-label"></label>
                <input asp-for="ContractStartTime" class="form-control" />
                <span asp-validation-for="ContractStartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractFinishTime" class="control-label"></label>
                <input asp-for="ContractFinishTime" class="form-control" />
                <span asp-validation-for="ContractFinishTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Statement" class="control-label"></label>
                <input asp-for="Statement" class="form-control" />
                <span asp-validation-for="Statement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModifiedTime" class="control-label"></label>
                <input asp-for="ModifiedTime" class="form-control" />
                <span asp-validation-for="ModifiedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuiledTime" class="control-label"></label>
                <input asp-for="BuiledTime" class="form-control" />
                <span asp-validation-for="BuiledTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Display" class="control-label"></label>
                <input asp-for="Display" class="form-check-input" type="checkbox" checked="@Model.Display" />
                <span asp-validation-for="Display" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="儲存" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">回到列表</a>
            </div>
            <form asp-action="Delete" method="post" style="display:inline;">
                <input type="hidden" asp-for="ContractId" />
                <input type="submit" value="退件" class="btn btn-danger" />
            </form>
        </form>
    </div>
    <div class="col-md-8">
        <h3>合約檔案</h3>
        @if (!string.IsNullOrEmpty(Model.ContractFilePath))
            {
                <div class="form-group">
                    <label>合約:</label>
                    <object data="@Model.ContractFilePath" type="application/pdf" width="600" height="400">
                        <a href="@Model.ContractFilePath" target="_blank">View PDF</a>
                    </object>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.NannySignatureFilePath))
            {
                <div class="form-group">
                    <label>保母電子簽名檔:</label>
                    <img src="@Model.NannySignatureFilePath" alt="Nanny Signature" width="200" />
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.UserSignatureFilePath))
            {
                <div class="form-group">
                    <label>家長電子簽名檔:</label>
                    <img src="@Model.UserSignatureFilePath" alt="User Signature" width="200" />
                </div>
            }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}











