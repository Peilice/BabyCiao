@using BabyCiao.ViewModel
@model ContactViewModel

<form asp-controller="Home" asp-action="Contact">
    <div asp-validation-summary="All" class="text-danger">
    <div class="form-group">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">姓名</label>
            <input as-asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="mb-3">
            <label asp-for="Email" class="form-label">電子郵件</label>
            <input as-asp-for="Email" type="text" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="mb-3">
            <label asp-for="Phone" class="form-label">連絡電話</label>
            <input as-asp-for="Phone" class="form-control" rows="5  />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>

        <div class="form-group">
            <div class="mb-3">
                <label asp-for="Title" class="form-label">主旨</label>
                <input as-asp-for="Title" class="form-control" rows="5    />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="content" class="form-label">聯絡內容</label>
            <textarea asp-for="content" class="form-control" rows="5"></textarea>
            <span asp-validation-for="content" class="text-danger"></span>
        </div>

    <div class="form-group">
        <div class="mb-3">
            <button type="submit">提交</button>
        </div>
    </div>
    </div>
</form>

 @section Scripts
{
    @{
        await Html.RenderPartialAsync("ValidationScriptsPartial");
    }
}
 