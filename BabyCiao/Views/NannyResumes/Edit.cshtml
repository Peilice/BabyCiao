@model BabyCiao.Models.DTO.NannyResumeDTO


<div class="container-fuild">
    <div class="row">
        <div class="col-4" height="auto">
            <ul class="navbar-nav sidebar sidebar-light accordion" id="accordionSidebar">
                <a asp-controller="Nannyplatform" asp-action="Nannyplatformindex">
                    <div class="sidebar-brand-text mx-3 ">保母平台管理</div>
                </a>
                <hr class="sidebar-divider">
                <li class="nav-item">
                    <a asp-controller="Nannyplatform" asp-action="NannyIndex" class="nav-link collapsed" data-toggle="collapse" data-target="#collapseForm" aria-expanded="true"
                       aria-controls="collapseForm"><i class="fab fa-fw fa-wpforms"></i>保母委託單管理</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Nannyplatform" asp-action="babyIndex" class="nav-link collapsed" data-toggle="collapse" data-target="#collapseForm" aria-expanded="true"
                       aria-controls="collapseForm"><i class="fab fa-fw fa-wpforms"></i>家長託單管理</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="NannyRequirments" asp-action="Index" class="nav-link collapsed" data-toggle="collapse" data-target="#collapsePage" aria-expanded="true"
                       aria-controls="collapsePage"><i class="fas fa-fw fa-columns"></i>保母審核管理</a>
                <li class="nav-item">
                    <a asp-controller="contracts" asp-action="Index" class="nav-link collapsed" data-toggle="collapse" data-target="#collapseTable" aria-expanded="true"
                       aria-controls="collapseTable"><i class="fas fa-fw fa-table"></i>合約管理</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="comment" asp-action="Index" class="nav-link collapsed" data-toggle="collapse" data-target="#collapsePage" aria-expanded="true"
                       aria-controls="collapsePage"> <i class="fas fa-fw fa-chart-area"></i>用戶狀態管理</a>
                </li>
            </ul>
        </div>
        <div class="col-8">
            <h1 class="h5 mt-4">保母委託單</h1>
            <div class="card">
                <div class="card-body p-3">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="id" />
                        <div class="form-group mb-2">
                            <label asp-for="NannyAccountUserAccount" class="form-label">帳號</label>
                            <select asp-for="NannyAccountUserAccount" class="form-control" asp-items="ViewBag.NannyAccountUserAccount"></select>
                            <span asp-validation-for="NannyAccountUserAccount" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="City" class="form-label">城市</label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="District" class="form-label">區域</label>
                            <input asp-for="District" class="form-control" />
                            <span asp-validation-for="District" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Introduction" class="form-label">介紹</label>
                            <input asp-for="Introduction" class="form-control" />
                            <span asp-validation-for="Introduction" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="TypeOfDaycare" class="form-label">托育類型</label>
                            <select asp-for="TypeOfDaycare" class="form-control" asp-items="ViewBag.TypeOfDaycare"></select>
                            <span asp-validation-for="TypeOfDaycare" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="ServiceItems" class="form-label">服務項目</label>
                            <input asp-for="ServiceItems" class="form-control" />
                            <span asp-validation-for="ServiceItems" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check mb-2">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="QuasiPublicChildcare" /> 公共托育
                            </label>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="ChildcareAvailableUnder2" class="form-label">2歲以下托育</label>
                            <input asp-for="ChildcareAvailableUnder2" class="form-control" />
                            <span asp-validation-for="ChildcareAvailableUnder2" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="ChildcareAvailableOver2" class="form-label">2歲以上托育</label>
                            <input asp-for="ChildcareAvailableOver2" class="form-control" />
                            <span asp-validation-for="ChildcareAvailableOver2" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Language" class="form-label">語言</label>
                            <input asp-for="Language" class="form-control" />
                            <span asp-validation-for="Language" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="ServiceCenter" class="form-label">服務中心</label>
                            <input asp-for="ServiceCenter" class="form-control" />
                            <span asp-validation-for="ServiceCenter" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="ProfessionalPortrait" class="form-label">專業照片</label>
                            <input asp-for="ProfessionalPortrait" type="file" class="form-control" />
                            <span asp-validation-for="ProfessionalPortrait" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            @* <label asp-for="InternalPhoto1" class="form-label">內部照片1</label>
                            <input asp-for="InternalPhoto1" type="file" class="form-control" />
                            <span asp-validation-for="InternalPhoto1" class="text-danger"></span> *@
                        </div>
                        <div class="form-group mb-2">
                            @* <label asp-for="InternalPhoto2" class="form-label">內部照片2</label>
                            <input asp-for="InternalPhoto2" type="file" class="form-control" />
                            <span asp-validation-for="InternalPhoto2" class="text-danger"></span> *@
                        </div>
                        <div class="form-group mb-2">
                            @* <label asp-for="InternalPhoto3" class="form-label">內部照片3</label>
                            <input asp-for="InternalPhoto3" type="file" class="form-control" />
                            <span asp-validation-for="InternalPhoto3" class="text-danger"></span> *@
                        </div>
                        <div class="form-group mb-2">
                            @* <label asp-for="InternalPhoto4" class="form-label">內部照片4</label>
                            <input asp-for="InternalPhoto4" type="file" class="form-control" />
                            <span asp-validation-for="InternalPhoto4" class="text-danger"></span> *@
                        </div>
                        <div class="form-group mb-2">
                            @* <label asp-for="InternalPhoto5" class="form-label">內部照片5</label>
                            <input asp-for="InternalPhoto5" type="file" class="form-control" />
                            <span asp-validation-for="InternalPhoto5" class="text-danger"></span> *@
                        </div>
                        <div class="form-group form-check mb-2">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="DisplayControl" /> 顯示控制
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="保存" class="btn btn-primary btn-sm" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary btn-sm">返回列表</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
