@model IEnumerable<BabyCiao.Models.NannyResume>

@{
    ViewData["Title"] = "保母委託單";
}

<div class="page-content form-page">
    <!-- 頁面標題-->
    <div class="bg-dash-dark-2 py-4">
        <div class="container-fluid">
            <h2 class="h5 mb-0">@ViewData["Title"]</h2>
        </div>
    </div>
    <!-- 麵包屑導航-->
    <div class="container-fluid py-2">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 py-3 px-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">首頁</a></li>
                <li class="breadcrumb-item active" aria-current="page">聯絡人</li>
                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Create" class="btn btn-primary btn-sm">新增</a>
                </div>
            </ol>

        </nav>
    </div>
    <section class="pt-0">
        <div class="container-fluid">
            <div class="row gy-4 msnry-grid">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-xl-4">
                        <div class="card">
                            <div class="card-body px-3 py-4">
                                <a class="stretched-link d-flex align-items-center text-reset" href="@Url.Action("Details", "NannyResumes", new { id = item.Id })">
                                    @if (!string.IsNullOrEmpty(item.ProfessionalPortrait))
                                    {
                                        <img class="avatar avatar-lg" src="@item.ProfessionalPortrait" alt="@item.Introduction" style="width: 100px; height: 100px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <img class="avatar avatar-lg" src="/img/大頭照.png" alt="Default Image" style="width: 100px; height: 100px; object-fit: cover;">
                                    }
                                    <div class="ms-3 overflow-hidden">
                                        <h5 class="card-text mb-0">@Html.DisplayFor(modelItem => item.City)</h5>
                                        <p class="card-text text-uppercase text-muted text-sm">@Html.DisplayFor(modelItem => item.District)</p>
                                        <p class="card-text">@Html.DisplayFor(modelItem => item.Introduction)<br><abbr title="Phone">帳號:</abbr>@Html.DisplayFor(modelItem => item.NannyAccountUserAccountNavigation.Account)</p>
                                    </div>
                                </a>
                                <div class="mt-3">
                                    <p><strong>托育類型:</strong> @Html.DisplayFor(modelItem => item.TypeOfDaycare)</p>
                                    <p><strong>服務項目:</strong> @Html.DisplayFor(modelItem => item.ServiceItems)</p>
                                    <p><strong>準公共托育:</strong> @Html.DisplayFor(modelItem => item.QuasiPublicChildcare)</p>
                                    <p><strong>可收托2歲以下:</strong> @Html.DisplayFor(modelItem => item.ChildcareAvailableUnder2)</p>
                                    <p><strong>可收托2歲以上:</strong> @Html.DisplayFor(modelItem => item.ChildcareAvailableOver2)</p>
                                    <p><strong>語言:</strong> @Html.DisplayFor(modelItem => item.Language)</p>
                                    <p><strong>服務中心:</strong> @Html.DisplayFor(modelItem => item.ServiceCenter)</p>
                                    <p><strong>顯示:</strong> @Html.DisplayFor(modelItem => item.DisplayControl)</p>
                                </div>
                            </div>
                            <div id="carouselExampleIndicators-@item.Id" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-indicators">
                                    <button type="button" data-bs-target="#carouselExampleIndicators-@item.Id" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                    <button type="button" data-bs-target="#carouselExampleIndicators-@item.Id" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                    <button type="button" data-bs-target="#carouselExampleIndicators-@item.Id" data-bs-slide-to="2" aria-label="Slide 3"></button>
                                    <button type="button" data-bs-target="#carouselExampleIndicators-@item.Id" data-bs-slide-to="3" aria-label="Slide 4"></button>
                                    <button type="button" data-bs-target="#carouselExampleIndicators-@item.Id" data-bs-slide-to="4" aria-label="Slide 5"></button>
                                </div>
                                <div class="carousel-inner">
                                   @*  @if (!string.IsNullOrEmpty(item.InternalPhoto1))
                                    {
                                        <div class="carousel-item active">
                                            <img src="@item.InternalPhoto1" class="d-block w-100" alt="Internal Photo 1" style="width: 150px; height: 150px; object-fit: cover;">
                                        </div>
