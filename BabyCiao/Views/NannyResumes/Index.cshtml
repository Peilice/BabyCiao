                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(item.InternalPhoto3))
                                    {
                                        <div class="carousel-item">
                                            <img src="@item.InternalPhoto3" class="d-block w-100" alt="Internal Photo 3" style="width: 150px; height: 150px; object-fit: cover;">
                                        </div>
                                    }
                                    else
