@model BabyCiao.Models.DTO.OnlineCompetitionsDTO
@{
    ViewData["Title"] = "Create";
}

<h1>投票活動管理</h1>

<h4>建立新活動</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CompetitionName" class="control-label"></label>
                <input asp-for="CompetitionName" class="form-control" />
                <span asp-validation-for="CompetitionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountUserAccount" class="control-label"></label>
                <input asp-for="AccountUserAccount" class="form-control" asp-items="ViewBag.AccountUserAccount"></input>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group d-flex">
                <label asp-for="Statement" class="control-label"></label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Statement" id="flexRadioDefault1" value="報名中">
                    <label class="form-check-label" for="flexRadioDefault1">報名中</label>
                </div>
                <span asp-validation-for="Statement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompetitionPhotoName" class="control-label"></label>
                <input type="file" asp-for="CompetitionPhotoName" class="form-control" />
                <span asp-validation-for="CompetitionPhotoName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">回到活動列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
