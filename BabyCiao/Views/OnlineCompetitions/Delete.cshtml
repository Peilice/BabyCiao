@model BabyCiao.Models.DTO.OnlineCompetitionsDTO

@{
    ViewData["Title"] = "Delete";
}

<h1>投票活動管理</h1>

<h3>確認是否刪除活動?</h3>
<div>
    @* <h4>OnlineCompetition</h4> *@
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">活動名稱
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompetitionName)
        </dd>
        <dt class = "col-sm-2">活動開始時間
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt class = "col-sm-2">活動結束時間
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndTime)
        </dd>
        <dt class = "col-sm-2">活動介紹
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ModifiedTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModifiedTime)
        </dd>
        <dt class = "col-sm-2">活動狀態
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Statement)
        </dd>
        <dt class="col-sm-2">活動照片
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhotoName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="刪除" class="btn btn-danger" onclick='return confirm("確定要刪除嗎?")'/> |
        <a asp-action="Index">回到活動列表</a>
    </form>
</div>
