@model BabyCiao.Models.DTO.PlatformsDTO

@{
    ViewData["Title"] = "Create";
}

<h1>論壇管理</h1>

<h4>發佈新公告</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlatformAccountUserAccount" class="control-label">發佈者帳號</label>
                <select asp-for="PlatformAccountUserAccount" class="form-control" asp-items="ViewBag.AccountUserAccount" readonly></select>
            </div>
            <div class="form-group">
                <label asp-for="PlatformTitle" class="control-label">標題</label>
                <input asp-for="PlatformTitle" class="form-control" />
                <span asp-validation-for="PlatformTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlatformContent" class="control-label">內文</label>
                <textarea asp-for="PlatformContent" class="form-control" rows="10"></textarea>
                <span asp-validation-for="PlatformContent" class="text-danger"></span>
            </div>
            <div class="form-group d-flex">
                <label asp-for="PlatformType" class="control-label"></label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="PlatformType" id="flexRadioDefault1" value="育兒生活">
                    <label class="form-check-label" for="flexRadioDefault1">育兒生活</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="PlatformType" id="flexRadioDefault1" value="好物分享">
                    <label class="form-check-label" for="flexRadioDefault1">好物分享</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="PlatformType" id="flexRadioDefault1" value="保母交流">
                    <label class="form-check-label" for="flexRadioDefault1">保母交流</label>
                </div>
                <span asp-validation-for="PlatformType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="發佈公告" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">回到論壇管理首頁</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
