@model BabyCiao.Models.DTO.PlatformsDTO

@{
    ViewData["Title"] = "Delete";
}

<h1>論壇管理</h1>

<h3>確認刪除此文章?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlatformModifiedTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlatformModifiedTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlatformTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlatformTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlatformContent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlatformContent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlatformType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlatformType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlatformDisplay)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlatformDisplay)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlatformAccountUserAccount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlatformAccountUserAccount)
        </dd>

    </dl>
    <h4 class="mb-3">留言回應</h4>
    <table class="table">
        <thead>
            <tr>
                <th>更新時間</th>
                <th>回應內容</th>
                <th>發布者帳號</th>
                @* <th>顯示控制</th> *@
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Responses)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResponseModifiedTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResponseContent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResponseAccountUserAccount)
                    </td>
                    @* <td>
                @Html.DisplayFor(modelItem => item.ResponseDisplay)
                </td> *@
                </tr>
            }
        </tbody>
    </table>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PlatformId" />
        <input type="submit" value="刪除" class="btn btn-danger" onclick='return confirm("確定要刪除嗎?")' /> |
        <a asp-action="Index">回到論壇管理列表</a>
    </form>
</div>
