@model BabyCiao.Models.DTO.PlatformsDTO
@* @model IEnumerable<BabyCiao.Models.DTO.PlatformsDTO> *@

@{
    ViewData["Title"] = "Details";
}

<h1>論壇管理</h1>

<div>
    @* <h4>Platform</h4> *@
    <hr />
    <dl class="row">
        @* 左半邊 *@
        <div class="col-sm-6">
            <div class="row">
                <dt class="col-sm-12">
                    最後更新時間
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.PlatformModifiedTime)
                </dd>
                <dt class="col-sm-12">
                    標題
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.PlatformTitle)
                </dd>
                <dt class="col-sm-12">
                    發布者帳號
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.PlatformAccountUserAccount)
                </dd>
                <dt class="col-sm-12">
                    分類
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.PlatformType)
                </dd>
                @* <dt class="col-sm-12">
                    顯示控制
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.PlatformDisplay)
                </dd> *@
            </div>
        </div>
        @* 右半邊 *@
        <div class="col-sm-6">
            <div class="row">
                <dt class="col-sm-12">
                    內文
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.PlatformContent)
                </dd>
            </div>
        </div>       
    </dl>
    <h4 class="mb-3">留言回應</h4>
    <table class="table">
        <thead>
            <tr>
                <th>更新時間</th>
                <th>回應內容</th>
                <th>發布者帳號</th>
                @* <th>顯示控制</th> *@
            </tr>
        </thead>
        
        <tbody>
            @foreach (var item in Model.Responses)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResponseModifiedTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResponseContent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResponseAccountUserAccount)
                    </td>
                    @* <td>
                        @Html.DisplayFor(modelItem => item.ResponseDisplay)
                    </td> *@
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PlatformId">文章管理</a> |
    @* <a asp-action="ResponseEdit" asp-route-id="@Model?.PlatformId">留言回應管理</a> *@
    <a asp-action="Index">回到論壇管理列表</a>
</div>
