@model BabyCiao.Models.Platform

@{
    ViewData["Title"] = "Edit";
}

<h1>論壇管理</h1>

<h4>管理文章</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AccountUserAccount" class="control-label">發佈者帳號</label>
                <select asp-for="AccountUserAccount" class="form-control" asp-items="ViewBag.AccountUserAccount" readonly></select>
                <span asp-validation-for="AccountUserAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModifiedTime" class="control-label">最後更新時間</label>
                <input asp-for="ModifiedTime" class="form-control" readonly />
                <span asp-validation-for="ModifiedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">標題</label>
                <input asp-for="Title" class="form-control" readonly/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label">內文</label>
                <textarea asp-for="Content" class="form-control" rows="10" readonly></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">類別</label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">顯示控制
                    <input class="form-check-input" asp-for="Display" /> @* @Html.DisplayNameFor(model => model.Display) *@
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="儲存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">回到論壇管理列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
