<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BabyCiao</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            background-image: url('/images/giftly.png');
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" id="navbar-admin">
                <a class="navbar-brand" href="https://localhost:7231">BabyCiao</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- 會員管理 -->
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">會員管理</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="UserAccounts" asp-action="Index">帳戶管理</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="UserInformations" asp-action="Index">會員資料管理</a></li>
                            </ul>
                        </li>
                        <!-- 媒合平台管理 -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Nannyplatform" asp-action="Nannyplatformindex">媒合平台管理</a>
                        </li>
                        <!-- 公告管理 -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Announcements" asp-action="Index">公告管理</a>
                        </li>
                        <!-- 電子聯絡簿 -->
                        @if (User.Identity.IsAuthenticated && User.IsInRole("電子聯絡簿"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="https://localhost:7231">電子聯絡簿</a>
                            </li>
                        }
                        <!-- 社群管理 -->
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">社群管理</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="SecondHand" asp-action="Index">二手商品管理</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="GroupBuy" asp-action="Index">團購管理</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="OnlineCompetitions" asp-action="Index">投票活動</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Platforms" asp-action="Index">論壇文章管理</a></li>
                            </ul>
                        </li>
                        <!-- 權限管理 -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Index">權限群組管理</a>
                        </li>
                        <!-- 數據分析 -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="DataAnalysis" asp-action="Index">數據分析管理</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="CustomerService" asp-action="CustomerService">客服系統</a>
                        </li>
                    </ul>
                    <div>
                        <div v-if="isLoggedIn">
                            <a :href="'/UserInformation/UserInformation'" class="nav-link">{{ account }}</a> /
                            <a href="#" v-on:click="logout"><i class="fas fa-user"></i>登出</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="page-content p-4">
        @RenderBody()
    </div>
    <!-- JavaScript files-->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.2/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://unpkg.com/vue@3.4.31/dist/vue.global.prod.js"></script>
    <script>
        const navbarApp = Vue.createApp({
            data() {
                return {
                    account: '',
                    permissions: 0,
                    isLoggedIn: false
                };
            },
            mounted() {
                this.checkLoginStatus();
            },
            methods: {
                checkLoginStatus() {
                    this.account = this.getCookie('account');
                    this.permissions = parseInt(this.getCookie('permissions'), 10);
                    this.isLoggedIn = !!this.account;

                    // 檢查權限值，如果小於4，則自動登出
                    if (this.permissions < 4) {
                        this.logout();
                    }
                },
                logout() {
                    document.cookie = 'account=; Path=/; Expires=Thu, 01 Jan 1970 00:00:01 GMT;';
                    document.cookie = 'token=; Path=/; Expires=Thu, 01 Jan 1970 00:00:01 GMT;';
                    document.cookie = 'permissions=; Path=/; Expires=Thu, 01 Jan 1970 00:00:01 GMT;';
                    this.isLoggedIn = false;
                    window.location.href = 'https://localhost:7231';
                },
                getCookie(name) {
                    let cookieArr = document.cookie.split(";");
                    for (let i = 0; i < cookieArr.length; i++) {
                        let cookiePair = cookieArr[i].split("=");
                        if (name == cookiePair[0].trim()) {
                            return decodeURIComponent(cookiePair[1]);
                        }
                    }
                    return null;
                }
            }
        });

        navbarApp.mount('#navbar-admin');
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
