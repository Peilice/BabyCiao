@using BabyCiao
@inject UserInfoServer userInfoServer

<ul class="navbar-nav">
    @{
        string name = userInfoServer.GetUserName();
    }
    @if (name!=null)
    {
        <li class="nav-item">
           
            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">@name 你好</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="andy_login" asp-action="logout">登出</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="andy_login" asp-action="login">登錄</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="andy_login" asp-action="register">註冊</a>
        </li>
    }
</ul>
