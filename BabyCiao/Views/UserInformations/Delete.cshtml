@model BabyCiao.Models.UserInformation


<h1>刪除</h1>

<div>
    <h4>會員資料</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            帳號
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountUserNavigation.Account)
        </dd>
        <dt class = "col-sm-2">
            名字
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserFirstName)
        </dd>
        <dt class = "col-sm-2">
            姓氏
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserLastName)
        </dd>
        <dt class = "col-sm-2">
            電話
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            地址
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            性別
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class = "col-sm-2">
           電子郵件
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            生日
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Birthday)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UserinfoId" />
        <input type="submit" value="刪除" class="btn btn-danger" /> |
        <a asp-action="Index">回到列表</a>
    </form>
</div>
