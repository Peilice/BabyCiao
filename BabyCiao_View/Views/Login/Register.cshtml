@{
    Layout = "_Layout";
    ViewData["Title"] = "註冊";
}

<div class="register-container">
    <div class="register-left">
        <h1>貝比巧遇</h1>
        <p>最好的 · 最專業的保母等著您</p>
    </div>
    <div class="register-right">
        <form id="registerForm" method="post" asp-action="Register">
            <h2>註冊</h2>
            <div class="input-group">
                <label for="account">帳號</label>
                <input type="text" id="account" name="account" required />
            </div>
            <div class="input-group">
                <label for="password">密碼</label>
                <input type="password" id="password" name="password" required />
            </div>
            <div class="radio-group">
                <input type="radio" id="parent" value="1" name="role" required>
                <label for="parent" class="radio-label">家長</label>
                <input type="radio" id="nanny" value="2" name="role" required>
                <label for="nanny" class="radio-label">保母</label>
            </div>
            <button type="submit" class="btn-register">註冊</button>
            <div class="register-footer">
                <a asp-action="Login">已經有帳戶？登入</a>
            </div>
        </form>
        <div id="successMessage" class="success-message"></div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('registerForm').addEventListener('submit', async function (event) {
            event.preventDefault();

            const account = document.getElementById('account').value;
            const password = document.getElementById('password').value;
            const role = document.querySelector('input[name="role"]:checked').value;
            const successMessageDiv = document.getElementById('successMessage');

            try {
                const response = await fetch('https://localhost:7292/api/UserAccount/register', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ account, password, permissions: parseInt(role) })
                });

                const data = await response.json();

                if (response.ok) {
                    successMessageDiv.textContent = '註冊成功';
                    successMessageDiv.className = 'success-message success';
                    setTimeout(() => {
                        window.location.href = '@Url.Action("Login", "Login")';
                    }, 2000);
                } else {
                    successMessageDiv.textContent = data.message || '註冊失敗';
                    successMessageDiv.className = 'success-message error';
                }
            } catch (error) {
                successMessageDiv.textContent = '註冊失敗，請稍後再試';
                successMessageDiv.className = 'success-message error';
            }
        });
    </script>
}

