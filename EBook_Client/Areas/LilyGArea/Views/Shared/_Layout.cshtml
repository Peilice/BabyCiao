<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BabyCiao_Client</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

    <!-- Swiper JS -->
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    @await RenderSectionAsync("Styles", required: false)
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://unpkg.com/vue@3.4.31/dist/vue.global.js"></script>

    <!-- dataTables  -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
    <style>
        body {
            background-image: url('/images/giftly.png');
        }
    </style>

    <script>
        let username = sessionStorage.getItem("username");
    </script>
</head>
<body>
    <div id="app00">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" >
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BabyCiao</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="active nav-link" asp-area="" asp-controller="Home" asp-action="About">關於我們</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">媒合平台</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="active nav-link" asp-area="Machplateform" asp-controller="Home" asp-action="MatchIndex">一同巧育</a></li>
                                <li><a class="active nav-link" asp-area="Machplateform" asp-controller="Home" asp-action="NannyResume">保母委託單</a></li>
                                <li><a class="active nav-link" asp-area="Machplateform" asp-controller="Home" asp-action="BabyResume">家長委託單</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Utility.SD.localHost_Backstage/Home/Index">管理後台</a>
                        </li>
                        <li class="nav-item">
                            <a id="e_book" class="nav-link text-dark" asp-area="andy_ebook" asp-controller="Home" asp-action="Index">電子聯絡簿</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="LilyGArea" asp-controller="Home" asp-action="Index">團購商品</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="LilySArea" asp-controller="Home" asp-action="Index">二手物品</a>
                        </li>
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Competitions" asp-action="Index">線上投票活動</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">聯絡我們</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial_self" />
                </div>

                <!-- 登入modal start-->
                <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="loginModalLabel">登入</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <!-- 原本的登入表單 -->
                                <div class="row">
                                    <div class="mb-3">
                                        <label class="form-label" for="">帳號</label>
                                        <input class="form-control" type="text" @@keyup="enable" v-model="username">
                                    </div>
                                    <div class="mb-5">
                                        <label class="form-label" for="">密碼</label>
                                        <input class="form-control" type="password" @@keyup="enable" v-model="password">
                                    </div>
                                    <div class="mb-3 d-flex justify-content-end">
                                        <button class="btn btn-success" :disabled="disableCheck" @@click="submit">登入</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
				<!-- 登入modal end -->
               
            </div>
        </nav>
    </header>
        <!-- 浮在頁面的按鈕 start -->
    <a 
           class="bg-success bg-opacity-75 text-white position-fixed bottom-0 end-0 p-2 text-decoration-none m-3 border border-1" onclick="scrollToTop()">PAGETOP</a>

        <div v-if="loggedInUsername" class="position-fixed top-10 start-0">
            <button @@click="myOrders(loggedInUsername)"
                class="bg-secondary bg-opacity-75 text-white text-decoration-none m-3 border border-1 d-block p-2">
            我的訂單
        </button>
            <button @@click="myFav(loggedInUsername)"
                    class="bg-secondary bg-opacity-75 text-white text-decoration-none m-3 border border-1 d-block p-2">
                我的最愛
            </button>
    </div>

        <!-- 浮在頁面的按鈕 end -->
    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - test2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        var app = Vue.createApp({
            data() {
                return {
                    username: "",
                    password: "",
                    disableCheck: true,
                    isLoggedIn: false,
                    loggedInUsername: "",
                    baseAddress_API: "@Utility.SD.localHost_API",
                    baseAddress_client: "@Utility.SD.localHost_Client",
                }
            },
            mounted() {
                this.checkLoginStatus();
            },
            methods: {
                checkLoginStatus() {
                    const username = sessionStorage.getItem("username");
                    if (username) {
                        this.isLoggedIn = true;
                        this.loggedInUsername = username;
                    }
                },
                enable() {
                    this.disableCheck = this.password.length <= 0 || this.username.length <= 0;
                },
                submit() {
                    let request = {
                        name: this.username,
                        password: this.password
                    };

                    axios.post(`${this.baseAddress_API}/api/Andy_JWT_Login`, request)
                        .then(response => {
                            const token = response.data;
                            localStorage.setItem("token", token);

                            Swal.fire({
                                position: "center",
                                icon: "success",
                                title: "登入成功",
                                showConfirmButton: false,
                                timer: 1500
                            }).then(() => {
                                const useToken = localStorage.getItem("token");
                                const headers = {
                                    'Authorization': `Bearer ${useToken}`,
                                };

                                axios.get(`${this.baseAddress_API}/api/Andy_JWT_Login`, { headers })
                                    .then(result => {
                                        const username = result.data;
                                        sessionStorage.setItem("username", username);
                                        this.isLoggedIn = true;
                                        this.loggedInUsername = username;
                                        $('#loginModal').modal('hide');
                                        // 重新加載頁面以更新狀態
                                        location.reload();
                                    })
                                    .catch(err => {
                                        Swal.fire('錯誤', err.message, 'error');
                                    });
                            });
                        })
                        .catch(err => {
                            Swal.fire('錯誤', err.message, 'error');
                        });
                },
                logout() {
                    sessionStorage.removeItem("username");
                    localStorage.removeItem("token");
                    this.isLoggedIn = false;
                    this.loggedInUsername = "";
                    // 重新加載頁面以更新狀態
                    location.reload();
                },
                async myOrders(username) {
                    //console.log('myOrders', username);
                    try {
                        //alert('myOrders~', username);
                        const response = await axios.post(`/GroupBuying/Home/MyOrders`, { user: username });
                        if (response.status === 200) {
                            window.location.href = `/GroupBuying/Home/MyOrders/${username}`;
                        }
                    } catch (error) {
                        console.error('Error get my orders:', error);
                    }
                },
                async myFav(username) {
                    //console.log('myOrders', username);
                    try {
                        //alert('myOrders~', username);
                        const response = await axios.post(`/GroupBuying/Home/MyFavorite`, { user: username });
                        if (response.status === 200) {
                            window.location.href = `/GroupBuying/Home/MyFavorite/${username}`;
                        }
                    } catch (error) {
                        console.error('Error get my favorite:', error);
                    }
                },

            }
        });

        app.mount("#app00");

        $(function () {
            //登出動畫與操作
            $('#logoutForm').on('click', function (e) {
                e.preventDefault();
                Swal.fire({
                    title: "提示!",
                    text: "您確定要登出?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "是的,確定登出!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: "登出成功!",
                            text: "歡迎再次蒞臨!",
                            icon: "success",
                            showConfirmButton: false,
                            timer: 1500
                        }).then((result) => {
                            sessionStorage.removeItem("username");
                            localStorage.removeItem("token");
                            window.location.href = `@Utility.SD.localHost_Client/Home/Index`
                        });
                    }
                });

            })
            $('#e_book').on("click", function (e) {
                if (username != null) {

                } else {
                    e.preventDefault();
                    sessionStorage.setItem("target", "@Utility.SD.localHost_Client/andy_ebook/Home/Index")
                    window.location.href = "@Utility.SD.localHost_Client/Home/Login";
                }
            })
        })
        function scrollToTop() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    </script>
</body>
</html>
