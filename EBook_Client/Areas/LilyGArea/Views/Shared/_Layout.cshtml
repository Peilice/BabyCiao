                },
            },
           
        }
        var app = Vue.createApp(vueApp).mount('#loginApp')

        $(function () {
            //登出動畫與操作
            $('#logoutForm').on('click', function (e) {
                e.preventDefault();
                Swal.fire({
                    title: "提示!",
                    text: "您確定的要登出?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "是的,確定登出!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: "登出成功!",
                            text: "歡迎再次蒞臨!",
                            icon: "success",
                            showConfirmButton: false,
                            timer: 1500
                        }).then((result) => {
                            sessionStorage.removeItem("username");
                            localStorage.removeItem("token");
                            window.location.href = `@Utility.SD.localHost_Client/Home/Index`
                        });
                    }
                });

