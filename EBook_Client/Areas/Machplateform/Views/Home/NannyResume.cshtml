<!DOCTYPE html>
<html>
<head>
    <title>保母委託單</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
</head>
<body>
    <div id="NannyIndex" class="container">
        <div class="row">
            <div class="col-12 mb-4">
                <div class="row">
                    <div class="col-4 mb-2" v-for="item in Resumes" :key="item.id">
                        <div class="card">
                            <img :src="getPhotoUrl(item.professionalPortrait)" class="card-img-top" style="height: 400px;">
                            <div class="card-body">
                                <div class="down-content">
                                    <h5>名字：{{ item.nickname }}</h5>
                                    <h5>地區：{{ item.city }}, {{ item.district }}</h5>
                                    <h5>服務方式：{{ item.typeOfDaycare }}</h5>
                                    <h5>時段：{{ item.timeSlot }}</h5>
                                    <div class="d-flex justify-content-center">
                                        <button class="btn btn-outline-success" v-on:click="showDetails(item.id)">詳細資訊</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="nannyResumesModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">{{ resume.nickname }}</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="swiper-container pb-2">
                            <div class="swiper-wrapper">
                                <div class="swiper-slide" v-for="professionalPortrait in resume.professionalPortraits" :key="professionalPortrait.id">
                                    <img :src="getPhotoUrl(photo)" :alt="resume.nickname">
                                </div>
                            </div>
                            <div class="swiper-pagination"></div>
                            <div class="swiper-button-next"></div>
                            <div class="swiper-button-prev"></div>
                        </div>
                        <p>{{ resume.city }}, {{ resume.district }}</p>
                        <p>服務項目：{{ resume.serviceType }}</p>
                        <p>服務時段：{{ resume.serviceItems }}</p>
                        <p>截止日期：{{ resume.typeOfDaycare }}</p>
                    </div>
                    <div class="modal-footer">
                        <button v-on:click="contactNTB(resume.id)" class="btn btn-success">送出履歷</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        new Vue({
            el: '#NannyIndex',
            data: {
                Resumes: [],
                resume: {},
                swiper: null
            },
            methods: {
                fetchResume() {
                    axios.get("https://localhost:7292/api/NannyResumes/GetNannyResumeinfoJoin")
                        .then(response => {
                            this.Resumes = response.data;
                        })
                        .catch(err => alert(err));
                },
                showDetails(id) {
                    axios.get(`https://localhost:7292/api/NannyResumes/GetNannyResumeinfoJoin/${id}`)
                        .then(response => {
                            this.resume = response.data;
                            this.$nextTick(() => {
                                if (this.resume.professionalPortraits && this.resume.professionalPortraits.length > 0) {
                                    if (this.swiper) {
                                        this.swiper.destroy(true, true);
                                    }
                                    this.swiper = new Swiper('.swiper-container', {
                                        loop: true,
                                        pagination: {
                                            el: '.swiper-pagination',
                                            clickable: true
                                        },
                                        navigation: {
                                            nextEl: '.swiper-button-next',
                                            prevEl: '.swiper-button-prev'
                                        }
                                    });
                                }
                            });
                            $('#nannyResumesModal').modal('show');
                        })
                        .catch(error => {
                            console.error("Error fetching product details:", error);
                        });
                },
                contactNTB(id) {
                    window.location.href = `https://localhost:7231/Machplateform/Home/contactNTB?id=${id}`;
                },
                getPhotoUrl(photo) {
                    return photo != null ? `https://localhost:7000/Nannnyandperant/nannyreume/${photo}` : `https://localhost:7000/image/noimage.jpg`;
                }
            },
            mounted() {
                this.fetchResume();
            }
        });
    </script>
</body>
</html>
