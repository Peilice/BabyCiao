            List_Eatting.forEach(function (item, index) {
                var div_ID = findIDByTime(item.my_time.getHours(), item.my_time.getMinutes());
                setDivByID(div_ID);
                var context_ID = addContextByTime(item.my_time.getHours(), item.my_time.getMinutes(), item.my_name);
                if (context_ID != null) {
                    addshowContext(div_ID, context_ID);
                }
            })
        }
        // 透過時間獲得生成位置
        function getPositionByTime(hour, minute) {
            if (hour > 12) {
                hour -= 12;
            }
            var p = ((hour * 6 - 1) + Math.floor((minute / 10))) * 10
            return p;
        }
        // 透過時間添加狀態到內容區並回傳context_ID
        function addContextByTime(hour, minute, name) {
            var ID = "";
            var a = (hour * 6 - 1) + Math.floor((minute / 10));
            var b = 5;
            ID = `timeDetial${a}_${b}`;
            var check_ID = document.getElementById(ID);
            if (check_ID == null) {
                var div = document.createElement('div');
                div.id = ID;
                div.innerHTML = `${name}`;
                var position = getPositionByTime(hour, minute);
                div.className = 'w-100 MSG_title';
                div.style.top = `${position}px`;
                // div.style.position = 'absolute';
                // div.style.backgroundColor = 'pink';
                // div.style.fontSize = '16px';
                context1.appendChild(div);
                return ID;
            } else {
                return null;
            }

        }
