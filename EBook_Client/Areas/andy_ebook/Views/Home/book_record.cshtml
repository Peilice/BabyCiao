        // 時間字串整理
        function dateTimeRebuild(dateTimeString) {
            var itemParts = dateTimeString.split(" ");
            var dateParts = itemParts[0].split("/");
            var year = dateParts[2];
            var month = dateParts[0];
            var day = dateParts[1];
            var timeParts = itemParts[1].split(":");
            var session = itemParts[2];
            var hour = timeParts[0];
            if (session == "下午") {
                hour += 12;
            }
            var minute = timeParts[1];
            var date = new Date(year, month, day, hour, minute);
            return date;

        }

