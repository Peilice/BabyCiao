        // 飲食專用函式:
        function addList_Eatting(item) {
            List_Eatting.push(item);
        }
        function showList(list) {
            context12.innerHTML = "";
            list.forEach(function (item, index) {
                var newdiv = document.createElement('div');
                newdiv.innerHTML = `<div class="container rounded m-3" style="background-color: pink;">
                                            <div class="row ">
