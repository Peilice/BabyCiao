            crossorigin="anonymous"></script>
    <!-- jquery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <!-- axios -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.2/axios.min.js"
            integrity="sha512-JSCFHhKDilTRRXe9ak/FJ28dcpOJxzQaCd3Xg8MyF6XFjODhy/YMCM8HW0TFDckNHWUewW+kfvhin43hKtJxAw=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        //var baseAddress="https://localhost:7292";
        var vueApp = {
            data() {
                return {
                    //CompetitionName: "",
                    OnlineCompetitions: [],
                };
            },
            methods: {
                fetchcompetitions: function () {
                    let _this = this;
                    //var request = {};
                    try {
                        axios.get('https://localhost:7292/api/OnlineCompetitions')
                        .then(response => {
                            _this.OnlineCompetitions = response.data;
                        })
                        .catch(err => alert(err))
                    } 
                    catch (error) {
                        console.log(error);
                    }
                },
                getPhotoUrl(CompetitionPhotoNames) {
                    return CompetitionPhotoNames != null ? `https://localhost:7000/uploads/${CompetitionPhotoNames}` : `https://localhost:7000/image/noimage.jpg`;
                },
                check:function(IdCom){
                    sessionStorage.setItem("IdCompetition", IdCom);
                    window.location.href = `https://localhost:7231/Competitions/voteInfo/${IdCom}`;
                }

            },
            mounted: function () {
                let _this = this;
                _this.fetchcompetitions()
            }


        };
        var app = Vue.createApp(vueApp).mount('#app');
    </script>