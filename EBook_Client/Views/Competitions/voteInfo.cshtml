                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>



<!-- axios -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.2/axios.min.js"
        integrity="sha512-JSCFHhKDilTRRXe9ak/FJ28dcpOJxzQaCd3Xg8MyF6XFjODhy/YMCM8HW0TFDckNHWUewW+kfvhin43hKtJxAw=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
    var vueApp = {
        data() {
            return {
                CompetitionName:"",
                Content:"",
                StartTime:"",
                EndTime:"",
                Statement:"",
                Competitor:0,
                Competitionsdetail: [],
            };
        },
        methods: {
            fetchcompetitions: function () {
                let _this = this;
                try {
                    axios.get("https://localhost:7292/api/OnlineCompetitions/2")
                        .then(response => {
                            _this.Competitionsdetail = response.data;
                            _this.CompetitionName = response.data[0].competitionName;
                            _this.Content = response.data[0].content;
                            _this.StartTime = response.data[0].startTime;
                            _this.EndTime = response.data[0].endTime;
                            _this.Statement = response.data[0].statement;
                            _this.Competitor = response.data.length;

                        })
                        .catch(err => alert(err))
                }
                catch (error) {
                    console.log(error);
                }
            },
            getPhotoUrl(CompetitionPhotos) {
                return CompetitionPhotos != null ? `https://localhost:7000/uploads/${CompetitionPhotos}` : `https://localhost:7000/image/noimage.jpg`;
            }

        },
        mounted: function () {
            let _this = this;
            _this.fetchcompetitions()
        }
    };
    var app = Vue.createApp(vueApp).mount('#app');
</script>