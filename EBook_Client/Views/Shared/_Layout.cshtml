
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BabyCiao_Client</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BabyCiao_Client.styles.css" asp-append-version="true" />
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" id="app00">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BabyCiao</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Utility.SD.localHost_Backstage/Home/Index">後臺程式入口</a>
                        </li>
                        <li class="nav-item">
                            <a id="e_book" class="nav-link text-dark" asp-area="andy_ebook" asp-controller="Home" asp-action="Index">電子聯絡簿</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial_self" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - test2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/vue@3.4.31/dist/vue.global.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.2/axios.min.js" integrity="sha512-JSCFHhKDilTRRXe9ak/FJ28dcpOJxzQaCd3Xg8MyF6XFjODhy/YMCM8HW0TFDckNHWUewW+kfvhin43hKtJxAw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        let username = sessionStorage.getItem("username");
        
        var vueApp = {
            data() {
                return {
                    u_name: "",
                    islogin: false,
                };
            },
            mounted: function () {
                let _this = this;
                _this.reflesh();
            },
            methods: {
                reflesh: function () {
                    let _this = this;
                    if (username != null) {
                        _this.islogin = true;
                    }
                    _this.u_name = username;
                },
            },
           
        }
        var app = Vue.createApp(vueApp).mount('#loginApp')

        $(function () {
            //登出動畫與操作
            $('#logoutForm').on('click', function (e) {
                e.preventDefault();
                Swal.fire({
                    title: "提示!",
                    text: "您確定的要登出?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "是的,確定登出!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: "登出成功!",
                            text: "歡迎再次蒞臨!",
                            icon: "success",
                            showConfirmButton: false,
                            timer: 1500
                        }).then((result) => {
                            sessionStorage.removeItem("username");
                            localStorage.removeItem("token");
                            window.location.href = `@Utility.SD.localHost_Client/Home/Index`
                        });
                    }
                });

            })
            $('#e_book').on("click", function (e) {
                if (username != null) {
                    
                } else {
                    e.preventDefault();
                    sessionStorage.setItem("target", "@Utility.SD.localHost_Client/andy_ebook/Home/Index")
                    window.location.href = "@Utility.SD.localHost_Client/Home/Login";
                }
            })
        })
        
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

